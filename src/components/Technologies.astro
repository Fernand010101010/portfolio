---
import { technologies } from "../assets/data";
import TechnologyCard from "../components/TechnologyCard.astro";
---


<div class="w-[75%] mx-auto mt-20 mb-10" data-tech-h1>
    <h2 class="cursor-pointer font-bold w-fit md:mx-5 sm:text-6xl xs-text-[40px] xs:mx-auto">Technologies</h2>
</div>

<!--Slider -->
<div class="overflow-x-hidden whitespace-nowrap cursor-pointer" data-tech-wrapper>
    <div class="tech-card inline-block">
        {
            technologies.map((tech)=>(
                <div class="inline-block m-0">
                    <TechnologyCard
                    text={tech.text}
                    logo={tech.logo}/>
                </div>
            ))
        }
    </div>
</div>

<!--Modal -->
<div class="w-screen h-screen bg-black/70 fixed top-0 left-0 z-[100] justify-center items-center hidden" data-tech-modal >
    <div class="tech-modal w-4/5 h-[70%] overflow-y-auto flex flex-wrap justify-center items-center gap-x-5 gap-y-4 bg-violet-500 " data-tech-stop>
        {
            technologies.map((tech)=>(
                <div class="inline-block m-0">
                    <TechnologyCard
                    text={tech.text}
                    logo={tech.logo}/>
                </div>
            ))
        }
    </div>
</div>



<style>
/*------------------------Slider-------------------------- */
.tech-card{
    background-image: linear-gradient(to bottom,rgb(255,255,255,.05),rgb(255,255,255,.03));
    padding-block: 2rem;
    border-bottom-width:1px ;
    border-top-width:1px ;
    border-color: #ffffff26;
    animation: 25s slide infinite linear;
}

    
    @keyframes slide {

       from{
            transform: translateX(0);
       } 
       to{
            transform: translateX(-100%);
       }
    }

    /*---------------------------------------- */

    /*----------------------Modal---------------------*/
    .tech-modal{
        background-image: linear-gradient(to bottom,#000,hsla(0,0%,0%,0.9));
        border: 2px solid #ffffff26;
        animation: fade-in 0.5s forwards;
    }
    @keyframes fade-in {
        0% {
            opacity:0 ;
            transform:scale();
        }
        70%{
            opacity:0.7 ;
            transform:scale(1.2);
        }
        100%{
            opacity:1 ;
            transform:scale(1);
        }
    }
    /*------------------------------------------------*/
</style>
